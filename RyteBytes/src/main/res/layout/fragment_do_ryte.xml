<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <com.myrytebytes.widget.CustomFontTextView
        android:id="@+id/tv_logged_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/do_ryte_logged_out"
        />

    <com.myrytebytes.widget.CustomFontTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="24dp"
        />

    <com.myrytebytes.widget.CustomFontTextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        />

    <com.myrytebytes.widget.CustomFontTextView
        android:id="@+id/tv_estimated_donation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_info"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        />

    <com.myrytebytes.widget.NetworkImageView
        android:id="@+id/img_charity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_estimated_donation"
        android:layout_below="@id/tv_title"
        android:scaleType="fitCenter"
        />

</RelativeLayout>
